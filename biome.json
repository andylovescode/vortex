{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": [
            "**/dist",
            "**/node_modules",
            "**/coverage",
            "**/.turbo",
            "**/.changeset",
            "**/.vscode",
            "**/.idea",
            "**/.DS_Store",
            "**/.wormhole",
            "packages/discovery/index.*"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "tab",
        "indentWidth": 4,
        "lineWidth": 80
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noUnusedTemplateLiteral": {
                    "fix": "safe",
                    "level": "warn"
                },
                "useNodejsImportProtocol": {
                    "fix": "safe",
                    "level": "warn"
                },
                "useTemplate": {
                    "fix": "safe",
                    "level": "warn"
                },
                "noUselessElse": {
                    "fix": "safe",
                    "level": "warn"
                }
            },
            "complexity": {
                "useOptionalChain": {
                    "fix": "safe",
                    "level": "warn"
                },
                "useLiteralKeys": {
                    "fix": "safe",
                    "level": "warn"
                }
            },
            "correctness": {
                "noUnusedImports": {
                    "fix": "safe",
                    "level": "warn"
                }
            },
            "suspicious": {
                "noExplicitAny": {
                    "level": "off"
                }
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}
