{
    "name": "@vortexjs/discovery",
    "version": "0.0.0",
    "main": "index.js",
    "types": "index.d.ts",
    "napi": {
        "name": "discovery",
        "targets": [
            "aarch64-apple-darwin",
            "wasm32-unknown-unknown",
            "x86_64-apple-darwin",
            "x86_64-unknown-linux-gnu",
            "x86_64-pc-windows-msvc"
        ]
    },
    "license": "MIT-0",
    "devDependencies": {
        "@napi-rs/cli": "catalog:"
    },
    "ava": {
        "timeout": "3m"
    },
    "engines": {
        "node": ">= 10"
    },
    "scripts": {
        "artifacts": "napi artifacts",
        "build:dev": "napi build --platform --release",
        "build:many": "napi build --release --target aarch64-apple-darwin && napi build --release --target wasm32-unknown-unknown && napi build --release --target x86_64-apple-darwin && napi build --release --target x86_64-unknown-linux-gnu && napi build --release --target x86_64-pc-windows-msvc",
        "build": "node -e \"require('child_process').execSync(process.env.GITHUB_ACTIONS ? 'npm run build:many' : 'npm run build:dev', {stdio: 'inherit'})\"",
        "prepublishOnly": "napi prepublish -t npm",
        "universal": "napi universal",
        "fmt": "cargo clippy --fix --allow-dirty && cargo fmt && biome check --write",
        "version": "napi version",
        "test": "bun test"
    },
    "optionalDependencies": {
        "@vortexjs/discovery-win32-x64-msvc": "catalog:",
        "@vortexjs/discovery-darwin-x64": "catalog:",
        "@vortexjs/discovery-linux-x64-gnu": "catalog:"
    }
}
