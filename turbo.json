{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"],
			"passThroughEnv": ["RUSTUP_HOME", "RUSTUP_TOOLCHAIN"],
			"outputLogs": "new-only"
		},
		"fmt": {
			"persistent": true,
			"cache": true,
			"passThroughEnv": ["RUSTUP_HOME", "RUSTUP_TOOLCHAIN"]
		},
		"dev": {
			"persistent": true,
			"cache": false,
			"dependsOn": ["^build"]
		}
	}
}
