{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"outputs": [
				"dist/**"
			],
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"src/**"
			],
			"outputLogs": "new-only"
		},
		"fmt": {
			"persistent": false,
			"cache": true,
			"outputLogs": "new-only"
		},
		"dev": {
			"persistent": true,
			"cache": false,
			"dependsOn": [
				"^build"
			]
		},
		"test": {
			"persistent": false,
			"cache": true,
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"src/**",
				"test/**"
			]
		}
	}
}
